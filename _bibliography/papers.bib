	pages = {1031--1042},
	file = {PDF:/home/ameneh/Zotero/storage/97C8T2LE/Mousavi et al. - 2021 - Hybrid simulations of the ring-beam instabilities driven by the pickup ions in the outer heliosheath.pdf:application/pdf},
}

