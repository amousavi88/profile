	pages = {36},
	file = {PDF:/home/ameneh/Zotero/storage/YTW9MB3T/Mousavi et al. - 2022 - Oblique Electromagnetic Instabilities Driven by Pickup Ion Ring-beam Distributions in the Outer Heli.pdf:application/pdf},
}

